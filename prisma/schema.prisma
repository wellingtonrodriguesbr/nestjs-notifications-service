generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Notification {
  id          String    @id @default(uuid())
  recipientId String    @map("recipient_id")
  content     String
  category    String
  readAt      DateTime? @map("read_at")
  createdAt   DateTime  @default(now()) @map("created_at")

  @@index([recipientId])
  @@map("notifications")
}
